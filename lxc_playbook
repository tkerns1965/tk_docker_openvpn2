lxc launch ubuntu:16.04 cnt-ubuntu-base
lxc exec cnt-ubuntu-base -- apt update
lxc exec cnt-ubuntu-base -- apt upgrade -y
lxc exec cnt-ubuntu-base -- apt autoremove -y
lxc snapshot cnt-ubuntu-base 01
lxc restart cnt-ubuntu-base
lxc exec cnt-ubuntu-base -- wget https://github.com/OpenVPN/easy-rsa/releases/download/v3.0.3/EasyRSA-3.0.3.tgz
lxc exec cnt-ubuntu-base -- tar zxvfP EasyRSA-3.0.3.tgz --transform 's!^EasyRSA-3.0.3!etc/easyrsa!'
lxc exec cnt-ubuntu-base -- chown -R 0:0 /etc/easyrsa/
lxc exec cnt-ubuntu-base -- /etc/easyrsa/easyrsa init-pki
lxc publish cnt-ubuntu-base cnt-easyrsa-base
lxc stop cnt-ubuntu-base
lxc start cnt-easyrsa-base
